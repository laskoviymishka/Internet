@model Internet.Models.LogOnModel
@{
    ViewBag.Title = "Log On";
}
<h2>
    Log On</h2>
<p>
   Введите имя и пароль @Html.ActionLink("Регистрация", "Register")
    Если вы еще не зарегестрировались зарегестрируйтесь!
</p>
@using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Пользователь не был авторизирован. Пожалуйста заполните форму корректно.", new { @class = "alert alert-block alert-error" })
   <fieldset>
        <legend>Account Information</legend>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName, new { @class = "required" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="controls">
                @Html.PasswordFor(m => m.Password, new { @class = "required" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="control-group">
            <div class="control-label">
                @Html.LabelFor(m => m.RememberMe)
            </div>
            <div class="controls">
                @Html.CheckBoxFor(m => m.RememberMe)
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" value="Log On" class="btn btn-primary" />
        </div>
    </fieldset>
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
