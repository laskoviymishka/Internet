@model Internet.Models.ViewModels.QuestionViewModel

@{
    ViewBag.Title = "Изменение вопроса";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> types = new List<SelectListItem>();
    foreach (var item in Model.Type)
    {
        types.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString()
        });
    }
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Изменение вопроса</legend>

        @Html.HiddenFor(model => model.Question.ID)
        @Html.HiddenFor(model => model.Question.TestID)
        <div class="editor-label">
           Текст вопроса
        </div>
        <div class="editor-field">
            @Html.Kendo().EditorFor(model => model.Question.QuestionBody)                 
            @Html.ValidationMessageFor(model => model.Question.QuestionBody)
        </div>
        
        <p>
            <input type="submit" value="Сохранить" class = "btn btn-success"/>
        </p>
    </fieldset>
}

<div>
  <a href =@Url.Content("~/Question/Index/" + Model.Question.TestID) class = "btn btn-mini"> Назад ко всем вопросам</a>
</div>
