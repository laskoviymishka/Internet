@model Internet.Models.Difficulty

@{
    ViewBag.Title = "Добавить сложность";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Добавить сложность</legend>

        <div class="editor-label">
            Имя сложности:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DifficultyName)
            @Html.ValidationMessageFor(model => model.DifficultyName)
        </div>

        <div class="editor-label">
          Описание сложности:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DifficultyDescription)
            @Html.ValidationMessageFor(model => model.DifficultyDescription)
        </div>

        <p>
            <input type="submit" value="Создать" class = "btn btn-success"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Назад ко всем спискам", "Index", null, new { @class = "btn btn-mini" })
</div>
