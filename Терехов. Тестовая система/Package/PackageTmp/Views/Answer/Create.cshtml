@model Internet.Models.ViewModels.AnswerViewModel
@{
    ViewBag.Title = "Создание ответа на вопрос: " + Model.Question.QuestionBody;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@if (Model.Question.QuestionType != 3)
{
    using (Html.BeginForm())
    {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Создание ответа на вопрос: @Model.Question.QuestionBody</legend>
        <div class="editor-label">
            Текст ответа
        </div>
        <div class="editor-field">
            @Html.Kendo().EditorFor(model => model.Answer.AnswerBody)
            @Html.ValidationMessageFor(model => model.Answer.AnswerBody)
        </div>
        @if (Model.Question.QuestionType == 1)
        {
            if (Model.Question.Answers.Where(a => a.IsRight == true).ToList().Count == 0)
            {
                <div class="editor-label"> Правильный? @Html.EditorFor(model => model.Answer.IsRight)
            </div>
            }

        }
        else
        {
            <div class="editor-label">
                Правильный? @Html.EditorFor(model => model.Answer.IsRight)
            </div>
        }
        <p>
            <input type="submit" value="Создать" class = "btn btn-success"/>
        </p>
    </fieldset>
    }
}
else
{
    if (Model.Question.Answers.Count>0)
    {
        
        <h3>
        В вопросе с типом текст может быть только 1 вариант ответа!</h3>
    }
    else
    {
        using (Html.BeginForm())
        {
         <fieldset>
        <legend>Создание ответа на вопрос: @Model.Question.QuestionBody</legend>
        <div class="editor-label">
            Текст ответа
        </div>
        <div class="editor-field">
            @Html.Kendo().EditorFor(model => model.Answer.AnswerBody)
            @Html.ValidationMessageFor(model => model.Answer.AnswerBody)
        </div>
        
         <p>
            <input type="submit" value="Создать" class = "btn btn-success"/>
        </p>
    </fieldset>
        }
    }

}
<div>
    <a href ="@Url.Content("~/Answer/Index/" + Model.Question.ID)" class = "btn btn-mini">Назад ко все варианта
        ответа на вопрос</a>|
</div>
