@model Internet.Models.Answer
@{
    ViewBag.Title = "Редактирование варианта ответа на вопрос: "+Model.Question.QuestionBody;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Изменение ответа на вопрос</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Редактирование варианта ответа на вопрос: @Model.Question.QuestionBody</legend>
        @Html.HiddenFor(model => model.ID)
        <div class="editor-label">
            Текст варианта ответа
        </div>
        <div class="editor-field">
            @Html.Kendo().EditorFor(model => model.AnswerBody)
            @Html.ValidationMessageFor(model => model.AnswerBody)
        </div>
        @if (Model.Question.QuestionType != 3)
        {
            if (Model.Question.QuestionType == 1)
            {
                if (Model.Question.Answers.Where(a => a.IsRight == true).ToList().Count == 0)
                {
            <div class="editor-label">
                Правильный? @Html.EditorFor(model => model.IsRight)
            </div>
                }
                else if (Model.Question.Answers.Where(a => a.IsRight == true).ToList().First().ID == Model.ID)
                {
           <div class="editor-label">
                Правильный? @Html.EditorFor(model => model.IsRight)
            </div>
                }
            }
            else
            {
             <div class="editor-label">
                Правильный? @Html.EditorFor(model => model.IsRight)
            </div>
            }
        }
        <p>
            <input type="submit" value="Сохранить"  class = "btn btn-success"/>
        </p>
    </fieldset>
}
<div>
    <a href ="@Url.Content("~/Answer/Index/" + Model.Question.ID)" class = "btn btn-mini">Назад ко всем вопросам</a>
</div>
